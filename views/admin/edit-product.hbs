<section>
  <div class=" container row">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Edit Product</h2>
      <form action="/admin/edit-productPost/{{product._id}}" method="post" enctype="multipart/form-data">
        <label for="">Name</label>
        <input type="text" name="name" value="{{product.name}}" class="form-control">

        <label for="">Description</label>
        <input type="text" name="description" value="{{product.description}}" class="form-control">

        <label for="">Price</label>
        <input type="Number" name="price" value="{{product.price}}" class="form-control">

        <label for="">Image</label>
        <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px;height: auto;">
        <input type="file" name="Image" class="form-control">

        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>